<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <!--
        Added the constraints for entity Bet.
    -->
    <changeSet id="20200401030800-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="bet"
                                 constraintName="fk_bet_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="game_user"/>

        <addForeignKeyConstraint baseColumnNames="hand_id"
                                 baseTableName="bet"
                                 constraintName="fk_bet_hand_id"
                                 referencedColumnNames="id"
                                 referencedTableName="hand"/>

    </changeSet>
</databaseChangeLog>
