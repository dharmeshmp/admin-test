<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <!--
        Added the constraints for entity Hand.
    -->
    <changeSet id="20200329104100-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="game_id"
                                 baseTableName="hand"
                                 constraintName="fk_hand_game_id"
                                 referencedColumnNames="id"
                                 referencedTableName="game"/>

        <addForeignKeyConstraint baseColumnNames="winner_id"
                                 baseTableName="hand"
                                 constraintName="fk_hand_winner_id"
                                 referencedColumnNames="id"
                                 referencedTableName="game_user"/>

    </changeSet>
</databaseChangeLog>
